<h2>User Details</h2>

<div class="col-9">
  <%= render 'layouts/message' %>
</div>

<div class="row mt-3" style="display: inline">
  <div class="col-9">
    <div class="card card-header">
      <table class="col-md-12 text-center">
        <tbody>
          <tr>
            <td><%= @user.email %></td>
            <td><%= @user.full_name %></td>
            <td>
              <% if current_user.not_friends_with?(@user.id) %>
                <%= link_to 'Follow friend?', friendships_path(friend: @user),
                            class: "btn btn-outline-success", method: :post %>
              <% else %>
                <span class="badge badge-secondary">
                  You are friends
                </span>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="col">
  <% if !@tracked_stock.empty? %>
    <%= render 'stocks/list' %>
  <% else %>
    <p>This user is not tracking any stocks</p>
  <% end %>
</div>